---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import SimpleAnalytics from '../components/SimpleAnalytics.astro';
export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		tags?: string;
		nextBlogId?: string;
		prevBlogId?: string;
		nextBlogTitle?: string;
		prevBlogTitle?: string;
	};
}

const {
	content: { title, description, pubDate, tags, nextBlogId, prevBlogId, nextBlogTitle, prevBlogTitle}
} = Astro.props;
---
<html lang="ja">

	<style is:global>
		.markdown-body{
			@apply container mx-auto md:px-14 text-lg tracking-wider leading-loose
		}
		.markdown-body ul {
			@apply list-disc list-inside pl-4 mb-4
		}
		.markdown-body h1, h2, h3 {
			@apply font-bold mb-4
		}
		.markdown-body h1, h2 {
			@apply border-b-2 border-solid border-gray-200 
		}
		.markdown-body h1 {
			@apply text-left text-4xl pb-2 font-extrabold leading-normal tracking-tight
		}
		.markdown-body h2 {
			@apply text-2xl
		}
		.markdown-body h3 {
			@apply text-xl
		}
		.markdown-body p {
			@apply mb-8
		}
	</style>
	<head>
	  <BaseHead title={title} description={description} />
	  <style>
		.title {
			@apply flex justify-center text-left font-extrabold text-4xl py-6 leading-normal tracking-tighter md:text-5xl md:py-8 md:leading-tight
		}
	  </style>
	</head>

	<body>
		<Header />
		<main>
			<article class="markdown-body">
				<div class="text-center">{pubDate && <time>{pubDate}</time>}</div>
				<div class="title">{title}</div>
				<div class="flex flex-wrap md:justify-center">
					{
					  tags?.split(" ").map((tag) => (
						<div class="text-xs mr-4 mt-2 p-2 bg-white font-bold text-gray-700 rounded-full border">#{tag}</div>
						)
					  )
					}
					</div>
				<div class="flex justify-center py-6 border-b-4 border-solid border-gray-200 mb-10"><img src="/hy3nalogo.png" width="56" height="56" alt="hy3na-logo"></div>
				<slot />
			</article>

			<!-- TODO: ページネーションアンカーの表示・非表示実装が見栄え悪いので直したいところ -->
			<div class="flex justify-between pb-20">
				{prevBlogId ? <div><div class="text-xs uppercase pb-2 tracking-wider text-gray-700 font-bold">previous post</div><a class="text-gray-500 hover:text-gray-700 font-semibold md:text-lg break-words" href={`/blog/${prevBlogId}`}>{prevBlogTitle}</a></div> : <div></div>}
				{nextBlogId ? <div><div class="text-xs uppercase pb-2 tracking-wider text-gray-700 font-bold">next post</div><a class="text-gray-500 hover:text-gray-700 font-semibold md:text-lg break-words" href={`/blog/${nextBlogId}`}>{nextBlogTitle}</a></div> : <div></div>}
			</div>
		</main>
		<SimpleAnalytics />
	</body>
</html>

