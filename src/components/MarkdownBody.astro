---
export interface Props {
    markDownBody: string;
}

const {markDownBody} = Astro.props;
---
<div class="markdown-body" set:html={markDownBody} />

<style is:global>
    .markdown-body ul {
        @apply list-disc list-inside pl-4 mb-4
    }
    .markdown-body h1, h2, h3 {
        @apply font-bold mb-4
    }
    .markdown-body h1, h2 {
        @apply border-b-2 border-solid border-gray-200 
    }
    .markdown-body h1 {
        @apply text-left text-4xl pb-2 font-extrabold leading-normal tracking-tight
    }
    .markdown-body h2 {
        @apply text-2xl
    }
    .markdown-body h3 {
        @apply text-xl
    }
    .markdown-body p {
        @apply mb-8
    }
</style>